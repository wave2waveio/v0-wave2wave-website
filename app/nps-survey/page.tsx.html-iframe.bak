"use client"

import { useSearchParams } from "next/navigation"
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from "@/components/ui/card"
import { useEffect, useState } from "react"

export default function NpsSurveyPage() {
  const searchParams = useSearchParams()
  const email = searchParams.get("email") ?? ""
  const answer = searchParams.get("initial_answer") ?? ""
  const [height, setHeight] = useState(900)
  const [isBlocked, setIsBlocked] = useState(false)
  const [showPrompt, setShowPrompt] = useState(false)

  // Correct URL format
  const base = "https://survey.survicate.com/0b81786631a86a8a/"
  const url = new URL(base)
  if (email) url.searchParams.set("email", encodeURIComponent(email))
  if (answer) url.searchParams.set("initial_answer", encodeURIComponent(answer))
  url.searchParams.set("source", "email_followup")
  url.searchParams.set("p", "anonymous")

  // Auto-resize + remove spinner reliably
  useEffect(() => {
    let spinnerRemoved = false
    const removeSpinner = () => {
      if (!spinnerRemoved) {
        document.getElementById("loader")?.remove()
        spinnerRemoved = true
      }
    }

    const handler = (e: MessageEvent) => {
      if (e.origin !== "https://survey.survicate.com") return
      if (e.data?.height) {
        setHeight(e.data.height + 60)
        removeSpinner()
      }
    }

    window.addEventListener("message", handler)

    // Safety nets — remove spinner no matter what
    const timer1 = setTimeout(removeSpinner, 4000)
    const timer2 = setTimeout(removeSpinner, 10000)

    return () => {
      window.removeEventListener("message", handler)
      clearTimeout(timer1)
      clearTimeout(timer2)
    }
  }, [])

  // Detect Shields blocking (onError + timeout check)
  useEffect(() => {
    const checkBlocked = setTimeout(() => {
      if (document.querySelector("iframe").contentDocument?.body.innerHTML === "" || !document.querySelector("iframe").contentWindow) {
        setIsBlocked(true)
        setShowPrompt(true)
      }
    }, 3000) // 3s grace period

    return () => clearTimeout(checkBlocked)
  }, [])

  const handleAllowClick = () => {
    // Guides user to Shields panel (Brave-specific)
    if (navigator.userAgent.includes("Brave")) {
      window.open("brave://settings/shields", "_blank")
    } else {
      // Fallback for other blockers
      window.location.href = url.toString()
    }
    setShowPrompt(false)
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-900 via-slate-950 to-slate-900 text-white py-20 px-4">
      <div className="max-w-4xl mx-auto text-center">
        <p className="text-sm uppercase tracking-widest text-sky-300 mb-4">Feedback</p>
        <h1 className="text-4xl md:text-5xl font-bold mb-6">Thank You!</h1>
        <p className="text-lg text-slate-300 mb-12">
          One last minute of your time helps us a ton.
        </p>

        <Card className="bg-white/10 border-white/10 backdrop-blur shadow-2xl overflow-hidden relative">
          <CardHeader>
            <CardTitle className="text-2xl text-white">Help us get better</CardTitle>
            <CardDescription className="text-slate-300">
              100% anonymous unless you choose to share contact info
            </CardDescription>
          </CardHeader>

          <CardContent className="p-0 relative">
            <iframe
              src={url.toString()}
              width="100%"
              height={height}
              className="border-0 w-full"
              title="Feedback survey"
              allowFullScreen
              sandbox="allow-scripts allow-same-origin allow-forms allow-popups allow-modals allow-top-navigation-by-user-activation"
              referrerPolicy="origin-when-cross-origin"
              loading="eager"
              onError={() => setIsBlocked(true)}
            />

            {/* Spinner (auto-removes as before) */}
            <div id="loader" className="absolute inset-0 flex items-center justify-center bg-slate-900/90 z-10">
              <div className="text-center">
                <div className="inline-block animate-spin rounded-full h-10 w-10 border-t-2 border-b-2 border-sky-400 mb-4"></div>
                <p className="text-slate-300">Loading survey…</p>
              </div>
            </div>

            {/* Shields Prompt (shows only if blocked) */}
            {showPrompt && (
              <div className="absolute inset-0 flex items-center justify-center bg-slate-900/95 z-20">
                <div className="bg-white/10 border border-sky-500 rounded-lg p-6 max-w-md mx-auto text-center">
                  <h3 className="text-white text-lg font-semibold mb-2">Quick Privacy Note</h3>
                  <p className="text-slate-300 mb-4">
                    Our feedback tool is blocked by your browser's privacy settings (common in Brave). It's safe and anonymous—allow it to continue?
                  </p>
                  <button
                    onClick={handleAllowClick}
                    className="px-6 py-2 bg-sky-600 text-white rounded-md hover:bg-sky-700 mr-2"
                  >
                    Allow & Reload
                  </button>
                  <button
                    onClick={() => window.location.href = url.toString()}
                    className="px-6 py-2 bg-slate-600 text-white rounded-md hover:bg-slate-700"
                  >
                    Open in New Tab
                  </button>
                </div>
              </div>
            )}
          </CardContent>
        </Card>

        <p className="mt-10 text-sm text-slate-400">
          Wave2Wave.io • An Anchorcraft Co. company
        </p>
      </div>
    </div>
  )
}